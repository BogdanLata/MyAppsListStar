<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/listAppsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apps_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="onListAppsButtonClick" />

    <Button
        android:id="@+id/saveToFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/savetofile"
        android:layout_below="@id/listAppsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="onSaveToFileButtonClick" />

    <ListView
        android:id="@+id/appListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/saveToFileButton" />

</RelativeLayout>
